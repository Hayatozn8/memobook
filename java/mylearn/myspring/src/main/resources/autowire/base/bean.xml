<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--使用byName的方式进行自动装配-->
    <bean id="cat" class="com.ljs.learn.autowire.base.Cat"/>
    <bean id="dog" class="com.ljs.learn.autowire.base.Dog"/>

    <bean id="people" class="com.ljs.learn.autowire.base.People" autowire="byName">
        <property name="name" value="TestName"/>
    </bean>

</beans>